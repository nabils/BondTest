<Window x:Class="Visifire.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:charts="clr-namespace:Visifire.Charts;assembly=WPFVisifire.Charts"
        Title="MainWindow" Height="1000" Width="1400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <charts:Chart x:Name="Chart" Theme="Theme1" Grid.Row="0"
                    AnimationEnabled="False" ScrollingEnabled="True" Margin="4" SamplingThreshold="5000">
        </charts:Chart>
        
        <Button Height="50" Grid.Row="1" Click="ButtonBase_OnClick">Clear</Button>
    </Grid>
</Window>
